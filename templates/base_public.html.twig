<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Winter Sports Shop{% endblock %}</title>
        {% block stylesheets %}
            {# Bootstrap CSS #}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
            {# Bootstrap Icons #}
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
            {# Custom CSS #}
            <link rel="stylesheet" href="{{ asset('css/base.css') }}">
            <link rel="stylesheet" href="{{ asset('css/shop.css') }}">
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        <header>
            <nav>
                <a href="{{ path(r('HOME').value) }}" class="logo">‚ùÑÔ∏è Winter Sports Shop</a>
                <ul class="nav-links">
                    <li><a href="{{ path(r('HOME').value) }}">Accueil</a></li>
                    <li><a href="{{ path(r('SHOP').value) }}">Boutique</a></li>
                    <li><a href="{{ path(r('CART').value) }}">Panier</a></li>
                    {% if app.user %}
                        {# Utilisateur connect√© #}
                        <li><a href="#">üë§ {{ app.user.firstName }}</a></li>

                        {% if is_granted('ROLE_ADMIN') %}
                            <li><a href="{{ path(r('CATEGORY').value) }}">‚öôÔ∏è Admin</a></li>
                        {% endif %}

                        <li><a href="{{ path(r('LOGOUT').value) }}">D√©connexion</a></li>
                    {% else %}
                        {# Utilisateur non connect√© #}
                        <li><a href="{{ path(r('LOGIN').value) }}">Connexion</a></li>
                        <li><a href="{{ path(r('REGISTER').value) }}">Inscription</a></li>
                    {% endif %}
                </ul>
            </nav>
        </header>

        <main>
            {% for message in app.flashes('success') %}
                <div class="container">
                    <div class="alert alert-success">{{ message }}</div>
                </div>
            {% endfor %}
            
            {% for message in app.flashes('error') %}
                <div class="container">
                    <div class="alert alert-error">{{ message }}</div>
                </div>
            {% endfor %}
            
            {% block body %}{% endblock %}
        </main>

        <footer>
            <p>&copy; {{ 'now'|date('Y') }} Winter Sports Shop - Tous droits r√©serv√©s</p>
        </footer>
    </body>
</html>
