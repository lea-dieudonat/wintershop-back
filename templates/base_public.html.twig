<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Winter Sports Shop{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/base.css') }}">
            <link rel="stylesheet" href="{{ asset('css/shop.css') }}">
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        <header>
            <nav>
                <a href="{{ path('app_home') }}" class="logo">‚ùÑÔ∏è Winter Sports Shop</a>
                <ul class="nav-links">
                    <li><a href="{{ path('app_home') }}">Accueil</a></li>
                    <li><a href="{{ path('app_shop_index') }}">Boutique</a></li>
                    <li><a href="#">Panier</a></li>
                    {% if app.user %}
                        {# Utilisateur connect√© #}
                        <li><a href="#">üë§ {{ app.user.firstName }}</a></li>
                        
                        {% if is_granted('ROLE_ADMIN') %}
                            <li><a href="{{ path('app_category_index') }}">‚öôÔ∏è Admin</a></li>
                        {% endif %}
                        
                        <li><a href="{{ path('app_logout') }}">D√©connexion</a></li>
                    {% else %}
                        {# Utilisateur non connect√© #}
                        <li><a href="{{ path('app_login') }}">Connexion</a></li>
                        <li><a href="{{ path('app_register') }}">Inscription</a></li>
                    {% endif %}
                </ul>
            </nav>
        </header>

        <main>
            {% for message in app.flashes('success') %}
                <div class="container">
                    <div class="alert alert-success">{{ message }}</div>
                </div>
            {% endfor %}
            
            {% for message in app.flashes('error') %}
                <div class="container">
                    <div class="alert alert-error">{{ message }}</div>
                </div>
            {% endfor %}
            
            {% block body %}{% endblock %}
        </main>

        <footer>
            <p>&copy; {{ 'now'|date('Y') }} Winter Sports Shop - Tous droits r√©serv√©s</p>
        </footer>
    </body>
</html>
