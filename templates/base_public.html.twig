<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Winter Sports Shop{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        <header>
            <nav>
                <a href="{{ path('app_home') }}" class="logo">❄️ Winter Sports Shop</a>
                <ul class="nav-links">
                    <li><a href="{{ path('app_home') }}">Accueil</a></li>
                    <li><a href="{{ path('app_shop_index') }}">Boutique</a></li>
                    <li><a href="#">Panier</a></li>
                    <li><a href="#">Mon compte</a></li>
                </ul>
            </nav>
        </header>

        <main>
            {% for message in app.flashes('success') %}
                <div class="container">
                    <div class="alert alert-success">{{ message }}</div>
                </div>
            {% endfor %}
            
            {% for message in app.flashes('error') %}
                <div class="container">
                    <div class="alert alert-error">{{ message }}</div>
                </div>
            {% endfor %}
            
            {% block body %}{% endblock %}
        </main>

        <footer>
            <p>&copy; {{ 'now'|date('Y') }} Winter Sports Shop - Tous droits réservés</p>
        </footer>
    </body>
</html>
