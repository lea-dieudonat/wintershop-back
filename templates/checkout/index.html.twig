{% extends 'base_public.html.twig' %}

{% block title %}Checkout - Winter Sports Shop{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/checkout.css') }}">
{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="mb-4">Finaliser ma commande</h1>
        <div class="row">
            <div class="col-lg-8">
                <form action="{{ path(constant('App\\Constant\\Route::CHECKOUT_CONFIRM').value) }}" method="post" id="checkout-form">
                    <input type="hidden" name="shipping_address_id" id="shipping_address_id">
                    <input type="hidden" name="billing_address_id" id="billing_address_id">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('checkout_confirm') }}">
                    <!-- Section Adresse de livraison -->
                    <div class="card mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <i class="bi bi-truck"></i> Adresse de livraison
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                            {% for address in addresses %}
                                <div class="col-md-6 mb-3">
                                    <div class="address-card" data-address-id="{{ address.id }}" data-address-type="shipping">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="shipping_address" value="{{ address.id }}" id="shipping_{{ address.id }}">
                                            <label class="form-check-label w-100" for="shipping_{{ address.id }}">
                                                <div class="address-content">
                                                    {% if address.isDefault %}
                                                    <span class="badge bg-success ms-2">Par défaut</span>
                                                    {% endif %}
                                                    <br>
                                                    <p>{{ address.street }}, {{ address.city }}, {{ address.postalCode }}</p>
                                                    <p>{{ address.country }}</p>
                                                </div>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                            </div>
                        </div>
                        <a href="#" class="btn btn-outline-secondary btn-sm w-100">Ajouter une nouvelle adresse</a>
                    </div>
                    <!-- Section Adresse de facturation -->
                    <div class="card mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <i class="bi bi-receipt"></i> Adresse de facturation
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="form-check mb-3">
                                <input type="checkbox" class="form-check-input" id="same-as-shipping" checked>
                                <label class="form-check-label" for="same-as-shipping">Identique à l'adresse de livraison</label>
                            </div>
                            <div id="billing-addresses">
                                <div class="row">
                                {% for address in addresses %}
                                    <div class="col-md-6 mb-3">
                                        <div class="address-card">
                                            <input type="radio" name="billing_address" value="{{ address.id }}" id="billing_{{ address.id }}">
                                            <label for="billing_{{ address.id }}" class="form-check-label w-100"></label>
                                            <div class="address-content">
                                                <strong>{{ address.firstName }} {{ address.lastName }}</strong>
                                                {% if address.isDefault %}
                                                    <span class="default-badge">Par défaut</span>
                                                {% endif %}
                                                <p>{{ address.street }}, {{ address.city }}, {{ address.postalCode }}</p>
                                                <p>{{ address.country }}</p>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Confirmer la commande</button>
                </form>
            </div>
            <!-- Section récapitulative des articles du panier -->
            <div class="col-lg-4">
                <div class="card sticky-top" style="top: 20px;">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">
                            Récapitulatif
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="checkout-items mb-3">
                            {% for item in cart.items %}
                                <div class="d-flex justify-content-between align-items-start mb-2 pb-2 border-bottom">
                                    <div class="grow">
                                        <strong>{{ item.product.name }}</strong>
                                        <br>
                                        <small class="text-muted">
                                            {{ item.quantity }} x {{ item.unitPrice }} €
                                        </small>
                                    </div>
                                    <div class="text-end">
                                        <strong>{{ (item.unitPrice * item.quantity)|number_format(2, '.', '') }} €</strong>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                        {# Total #}
                        <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                            <h5 class="mb-0">Total</h5>
                            <h4 class="mb-0 text-primary">{{ cart.totalPrice }} €</h4>
                        </div>

                        {# Lien modifier panier #}
                        <div class="mt-3">
                            <a href="{{ path(constant('App\\Constant\\Route::CART').value) }}" class="btn btn-outline-secondary btn-sm w-100">
                                <i class="bi bi-pencil"></i> Modifier mon panier
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/checkout.js') }}"></script>
{% endblock %}